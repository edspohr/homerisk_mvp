{
  "functions": [
    {
      "source": "packages/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "packages/frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "rewrites": [


      {
        "source": "/api/report/**",
        "function": "read"
      },
      {
        "source": "/api/submit-analysis",
        "function": "submitAnalysis"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
